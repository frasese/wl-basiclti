<div class="portletBody">
	<h3>
		$tlang.getString("content.title")
	</h3>
	#if ($messageSuccess)<div class="messageSuccess">$tlang.getString("gen.success") $validator.escapeHtml($messageSuccess)</div><div class="clear"></div>#end
	#if ($alertMessage)<div class="alertMessage">$tlang.getString("gen.alert") $validator.escapeHtml($alertMessage)</div><div class="clear"></div>#end
	<form action="#toolForm("")" method="post" name="customizeForm" >
#if ($contents && $contents.size() > 0)
			<table class="listHier lines" cellspacing="0" summary ="$tlang.getString("content.table")">
				<tr>
					<th id="title">$tlang.getString("bl_title")</th>
					<th id="action" width="25%">Action</th>
				</tr>
	#foreach ($content in $contents)
	<tr>
	<td headers="matchpattern">$content.get("title")</td>
	<td headers="action"><a href="$sakai_ActionURL.setPanel("ContentPut")&id=$content.get("id")">Edit</a> / 
	<a href="$sakai_ActionURL.setPanel("ContentDelete")&id=$content.get("id")">Delete</a></td>
	<tr>
	#end
	</table>
#else
<p>$tlang.getString("lti.content.none")</p>
#end
		<p class="act">
			<input type="submit" accesskey ="i" value="$tlang.getString('gen.insert')" 
 				onclick="location = '$sakai_ActionURL.setPanel("ContentPut")';return false;">
			<input type="submit" accesskey ="x" value="$tlang.getString('gen.done')" 
 				onclick="location = '$sakai_ActionURL.setPanel("Main")';return false;">
		</p>
	</form>
</div>
