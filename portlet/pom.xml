<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>basiclti-base</artifactId>
    <groupId>org.sakaiproject</groupId>
    <version>2.7.0-SNAPSHOT</version> 
    <relativePath>../pom.xml</relativePath>
  </parent>
  <name>sakai-blti-portlet</name>
  <groupId>org.sakaiproject</groupId>
  <artifactId>sakai-blti-portlet</artifactId>
  <organization>
    <name>Charles Severance</name>
    <url>http://www.dr-chuck.com/</url>
  </organization>
  <inceptionYear>2009</inceptionYear>
  <packaging>war</packaging>
  <profiles>
    <profile>
      <id>K1</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.sakaiproject.kernel</groupId>
          <artifactId>sakai-kernel-util</artifactId>
        </dependency>
        <dependency>
          <groupId>org.sakaiproject</groupId>
          <artifactId>sakai-blti-util</artifactId>
        </dependency>
        <dependency>
          <groupId>org.sakaiproject.kernel</groupId>
          <artifactId>sakai-kernel-api</artifactId>
        </dependency>
        <dependency>
          <groupId>org.sakaiproject.kernel</groupId>
          <artifactId>sakai-component-manager</artifactId>
        </dependency>
        <dependency>
          <groupId>org.sakaiproject</groupId>
          <artifactId>sakai-portlet-util</artifactId>
        </dependency>
        <dependency>
          <groupId>commons-logging</groupId>
          <artifactId>commons-logging</artifactId>
          <scope>provided</scope>
        </dependency>
        <dependency>
          <groupId>javax.servlet</groupId>
          <artifactId>servlet-api</artifactId>
          <scope>provided</scope>
        </dependency>
        <dependency>
          <groupId>javax.portlet</groupId>
          <artifactId>portlet-api</artifactId>
          <scope>provided</scope>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
  <build>
    <resources>
      <resource>
        <directory>${basedir}/src/bundle</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.xml</include>
          <include>**/*.vm</include>
        </includes>
      </resource>
    </resources>
  </build>
</project>
